        <servlet-name>AddVideoController</servlet-name>
        <url-pattern>/AddVideoController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDocController</servlet-name>
        <url-pattern>/AddDocController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
